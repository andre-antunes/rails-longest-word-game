<h1>Longest Word</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="list">
      <% @letters.each do |letter| %>
        <p class="letter"><%= letter %></p>
      <% end %>
    </div>
  </div>
</div>

<br>

<div class="container">
  <p for="word">What is the longest word you can find?</p>
  <form action="/score" method="post" class="form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" class="input">
    <input type="submit" id="btn" value="Play">
  </form>

</div>
